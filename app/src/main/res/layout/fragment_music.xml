<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imagetitle"
                android:id="@+id/cover"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/music_Avatar"
                android:layout_below="@+id/scrollView"
                android:src="@drawable/music_avatar"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/authorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hello"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:id="@+id/desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="world"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#BFBFBF"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:text="歌词"
                    android:textStyle="italic"/>

                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_marginTop="20dp">-->
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/musicShareqq"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/shareqq"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="50dp"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/musicSharewechat"
                        android:src="@drawable/wechat"
                        android:layout_marginTop="10dp"/>
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/musicShareOther"
                        android:src="@drawable/shareother"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        />
                <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/keep"
                    android:layout_marginLeft="10dp"/>
                <!--</LinearLayout>-->

                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/playbutton"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="55dp"
                    />
            </LinearLayout>
            <View
                android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#BFBFBF"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/story_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="TEXT TITLE"
                android:textSize="10pt"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/story_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEXT AUTHOR"
                android:textSize="5pt"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="40dp"
                android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#BFBFBF"
                android:layout_marginTop="30dp"
                />




        </LinearLayout>


    </ScrollView>


</RelativeLayout>
